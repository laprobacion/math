    <TextView
        android:id="@+id/numDown1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/numUp1"
        app:layout_constraintTop_toBottomOf="@+id/numUp1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/numUp1" />

    <TextView
        android:id="@+id/ans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/numDown4"
        app:layout_constraintTop_toBottomOf="@+id/numDown4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/numDown4" />

    <TextView
        android:id="@+id/topNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/topNum2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/numUp4" />

    <TextView
        android:id="@+id/topNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40dp"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/numUp3"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/mulUp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toRightOf="@+id/topNum3"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/topNum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/topNum2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/numUp1" />

    <TextView
        android:id="@+id/topNum4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toLeftOf="@+id/numUp2"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/topNum3"
