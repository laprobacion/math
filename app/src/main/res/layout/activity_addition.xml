    <TextView
        android:id="@+id/numDown3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/numUp3"
        app:layout_constraintTop_toBottomOf="@+id/numUp3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/numUp3" />

    <TextView
        android:id="@+id/numDown4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
