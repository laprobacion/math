<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/parentMultiply"
    tools:context="com.master.math.activity.MultiplyActivity">


    <TextView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replay"
        android:textSize="40dp"
        android:visibility="invisible"
        android:layout_above="@+id/topNum2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />
    <TextView
        android:id="@+id/newProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textSize="40dp"
        android:visibility="invisible"
        android:layout_below="@+id/replay"
        android:layout_alignRight="@+id/replay"
        android:layout_alignEnd="@+id/replay" />

    <TextView
        android:id="@+id/finalAnswer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="invisible"
        android:text="000"
        android:textSize="60dp"
        android:layout_alignBaseline="@+id/totalAns1"
        android:layout_alignBottom="@+id/totalAns1" />

    <TextView
        android:id="@+id/totalAns1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60dp"
        android:layout_below="@+id/popupMultiply"
        android:layout_alignRight="@+id/num3"
        android:layout_alignEnd="@+id/num3" />
    <TextView
        android:id="@+id/topNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:layout_above="@+id/topNum"
        android:layout_alignLeft="@+id/topNum"
        android:layout_alignStart="@+id/topNum" />
    <TextView
        android:id="@+id/topNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:layout_above="@+id/num2"
        android:layout_alignLeft="@+id/num1"
        android:layout_alignStart="@+id/num1" />

    <RelativeLayout
        android:id="@+id/draggedAnswerWindow"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@drawable/bg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp">

        <TextView
            android:id="@+id/ans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60dp"
            android:layout_alignBaseline="@+id/ans1"
            android:layout_alignBottom="@+id/ans1"
            android:layout_toLeftOf="@+id/ans1"
            android:layout_toStartOf="@+id/ans1" />

        <TextView
            android:id="@+id/ans1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="0"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popupMultiply"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/line"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/formulaPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99 x 99 ="
            android:gravity="center"
            android:textSize="60dp"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/userAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:textSize="60dp"
            android:inputType="number"
            android:layout_marginRight="49dp"
            android:layout_marginEnd="49dp"
            android:layout_alignBaseline="@+id/formulaPop"
            android:layout_alignBottom="@+id/formulaPop"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:textSize="60dp"
        android:text="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="165dp"
        android:layout_marginStart="165dp" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="9"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1" />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="31dp"
        android:text="X"
        android:layout_below="@+id/num1"
        android:layout_toLeftOf="@+id/num2"
        android:layout_toStartOf="@+id/num2"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/multiply"
        android:layout_toEndOf="@+id/multiply"
        android:layout_toRightOf="@+id/multiply"
        android:text="8"
        android:textSize="60dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="_________"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/multiply"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/totalAns2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="0"
        android:layout_alignBaseline="@+id/totalAns1"
        android:layout_alignBottom="@+id/totalAns1"
        android:layout_toLeftOf="@+id/totalAns1"
        android:layout_toStartOf="@+id/totalAns1" />




</RelativeLayout>
