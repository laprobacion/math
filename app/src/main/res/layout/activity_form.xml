<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentForm"
    android:background="@drawable/bg"
    tools:context="com.master.math.activity.FormActivity">

    <TextView
        android:id="@+id/formula"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="60dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="35dp"
        android:layout_marginTop="214dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/userAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/formula"
        android:layout_alignBottom="@+id/formula"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="74dp"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="60dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="73dp"
        app:layout_constraintRight_toRightOf="@+id/formula"
        app:layout_constraintBaseline_toBaselineOf="@+id/formula"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/open"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="74dp" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Scratch"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/formula"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
